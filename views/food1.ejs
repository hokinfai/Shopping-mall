  <body>
    <div class="main">
      <div>
          
        <div class="col-xs-3" id="sortddm">
          <div class="btn-group select select-block">
            <button class=
            "btn dropdown-toggle clearfix btn-primary" data-toggle=
            "dropdown" id="dropdown" value="1"><span class=
            "filter-option pull-left">sort by</span>&nbsp;<span class="caret">&lrm;</span></button>
            <ul class="dropdown-menu dropdown-inverse" role="menu"
            style=
            "overflow-y: auto; min-height: 108px; max-height: 68px;">
            <li>
                <a tabindex="-1"><span class=
                "pull-left">price</span></a>
              </li>
              <li>
                <a tabindex="-1"><span class=
                "pull-left">rates</span></a>
              </li>
            </ul>
          </div>
        </div>
        <div id="product_list">
          <div id="img_list_area">
            <ul id="img_list">
                <% for(var i=0;i<product.length;i++){ %>
              <li>
                <div id="product">
                  <div id="img">
                      <a href=""><img src="<%= product[i].imgPath %>"
                    width="200px"></a>
            </div><a href=""><%= product[i].name %></a><br>
            <a href="" class="price"><%= product[i].price %></a>
                  <p>
                  <a href=""><%= product[i].category %></a>
                  </p>
                    <i class='glyphicon glyphicon-star'>&lrm;</i><i class='glyphicon glyphicon-star'>&lrm;</i><i class='glyphicon glyphicon-star'>&lrm;</i><i class='glyphicon glyphicon-star-empty'>&lrm;</i><i class='glyphicon glyphicon-star-empty'>&lrm;</i>
                     
       <p>
                    <!--<a href="" class="btn btn-danger" role=
                    "button">Delete</a>-->
                  </p>
                </div>
              </li>
              <% } %>
                          </ul>
          </div>
          <div class="pagination">
            <ul>
              <li class="previous">
                <a href="#fakelink" class="fui-arrow-left"></a>
              </li>
              <li class="active">
                <a href="#fakelink">1</a>
              </li>
              <li>
                <a href="#fakelink">2</a>
              </li>
              <li class="next">
                <a href="#fakelink" class="fui-arrow-right"></a>
              </li>
            </ul>
          </div>
        </div>
      </div>
        
    </div>
      <script src=
    "bootstrap-rating-input/build/bootstrap-rating-input.min.js"
    type="text/javascript">
</script> 
      <script type="text/javascript">
    function sortByPrice(parent, childSelector, keySelector) {
    var items = parent.children(childSelector).sort(function(a, b) {
        var vA = parseInt($(keySelector, a).text().replace("$",''));
        var vB =parseInt($(keySelector, b).text().replace("$",''));
        return (vA < vB) ? -1 : (vA > vB) ? 1 : 0;
    });
    parent.append(items);
    }
    </script> <script type="text/javascript">
     
    $(".col-xs-3 ul li a").click(function(){

      $(".filter-option.pull-left").text($(this).text());
      $(".col-xs-3 button").val($(this).text());
    if($(this).text()=="price"){sortByPrice($('#img_list'), "li", "a.price");}

    });

    </script>
       
           
  </body>
</html>
