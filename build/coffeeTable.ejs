<!DOCTYPE html>
<html>
  <head>

    <style type="text/css">

    body{
    background-image: url(./cwp/image/furniturebg.png);background-repeat: no-repeat;background-size: cover;}
    .btn-danger {
    position:relative;
    left: 388px;
    }
         <% if(admin){ %>
        td{border:dashed 1px grey;}
    <% } %>
    </style>
    <title></title>
  </head>
  <body>
    <div class="main">
      <div id="left">
        <div id="product-image" style=
        "background-image: url(./cwp/image/CoffeeTable1.JPG);">
        </div>
        <div id="product-images">
          <p style="color:#16A085">
            Read more images
          </p>
          <ul id="product-images">
            <li>
              <a href="#"><img src="./cwp/image/CoffeeTable1.JPG"
              width="100px" height="100px" id="1"></a>
            </li>
            <li>
              <a href="#"><img src="./cwp/image/CoffeeTable2.JPG"
              width="100px" height="100px" id="2"></a>
            </li><% for(var i=0;i<imgURL.length;i++){ %>
            <li id="<%= i %>">
              <a href="#"><img src='%3C%=%20imgURL[i]%20%%3E'
              width="100px" height="100px"></a>
            </li><% } %>
          </ul>
        </div>
      </div>
      <div id="right">
        <table border="0" width="450" cellpadding="60" cellspacing=
        "2" id="details">
          <tr>
            <td colspan="2">
              <p>
                <strong id="title"><%= name %></strong>
              </p><% if(admin){ %><a href="#fakelink" class=
              "btn btn-danger" id="title">Edit</a><% } %>
            </td>
          </tr>
          <tr>
            <td colspan="2">
              <p id="description">
                <%= detail %>
              </p><% if(admin){ %><a href="#fakelink" class=
              "btn btn-danger" id="title">Edit</a><% } %>
            </td>
          </tr>
          <tr>
            <td colspan="2">
              <p id="price">
                <%= price %>
              </p><% if(admin){ %><a href="#fakelink" class=
              "btn btn-danger" id="title">Edit</a><% } %>
            </td>
          </tr><% if(!admin){ %>
          <tr>
            <td colspan="2">
              Your Rating:<input class="rating" data-clearable=
              "remove" id="some_id" name="your_awesome_parameter"
              type="number">
            </td>
          </tr>
          <tr>
            <td>
              <div class="col-xs-3" id="quantityddm">
                <div class="btn-group select select-block">
                  QTY: <button class=
                  "btn dropdown-toggle clearfix btn-primary"
                  data-toggle="dropdown" id="dropdown" value=
                  "1"><span class=
                  "filter-option pull-left">1</span>&nbsp;</button>
                  <ul class="dropdown-menu dropdown-inverse" role=
                  "menu" style=
                  "overflow-y: auto; min-height: 108px; max-height: 68px;">
                  <li>
                      <a tabindex="-1"><span class=
                      "pull-left">1</span></a>
                    </li>
                    <li>
                      <a tabindex="-1"><span class=
                      "pull-left">2</span></a>
                    </li>
                    <li>
                      <a tabindex="-1"><span class=
                      "pull-left">3</span></a>
                    </li>
                    <li>
                      <a tabindex="-1"><span class=
                      "pull-left">4</span></a>
                    </li>
                    <li>
                      <a tabindex="-1"><span class=
                      "pull-left">5</span></a>
                    </li>
                    <li>
                      <a tabindex="-1"><span class=
                      "pull-left">6</span></a>
                    </li>
                    <li>
                      <a tabindex="-1"><span class=
                      "pull-left">7</span></a>
                    </li>
                    <li>
                      <a tabindex="-1"><span class=
                      "pull-left">8</span></a>
                    </li>
                    <li>
                      <a tabindex="-1"><span class=
                      "pull-left">9</span></a>
                    </li>
                    <li>
                      <a tabindex="-1"><span class=
                      "pull-left">10</span></a>
                    </li>
                  </ul>
                </div>
              </div>
            </td>
            <td>
              <a href="" class="btn btn-primary" role="button" id=
              "addToCart">Add to My Cart</a>
            </td>
          </tr><% } %>
        </table>
      </div>
    </div><script>

    $(".col-xs-3 ul li a").click(function(){

      $(".filter-option.pull-left").text($(this).text());
      $(".col-xs-3 button").val($(this).text());

    });
    </script> <script src=
    "bootstrap-rating-input/build/bootstrap-rating-input.min.js"
    type="text/javascript">
</script> <script type="text/javascript">

     
      $('ul#product-images li').click(function(event){
    $('#product-image').css('background-image','url('+$(this).children().children().attr('src')+')')
      }
    )
      

    </script> <script>
      $('a#title').click(function(event){var x;

    var title=prompt("Edit Title","Harry Potter");

    if (title!=null)
    {
    x=title;
    $('strong#title').text(x);
    }})
      $('a#description').click(function(event){var x;

    var description=prompt("Edit Product Description","");

    if (description!=null)
    {
    x=description;
    $('p#description').text(x);
    }})    
      $('a#price').click(function(event){var x;

    var price=prompt("Edit Price","$39.99");

    if (price!=null)
    {
    x=price;
    $('p#price').text(x);
    }})
      
    </script> <script>
  var height = $('div#left').css('height');
          if($('div#right').css('height')!==height){
              $('div#right').css('height',height)
          }
    </script>
  </body>
</html>
